<div class="row">
<h2 class="page-header">Login as Domain Client User</h2>
</div>

<div class="row">
    <div class="col-sm-6">
 <%= form_for(:session, url: @form_target,:html => { :id => 'session-login-form', :autocomplete =>"off",:role => "form", :class => "form-horizontal"}) do |f| %>
     <%= hidden_field_tag "logintype",@logintype %>

    <div class="form-group">
      <%= label_tag :user_login_id, t('users.login_id'),:class=>"col-sm-2 control-label" %>
      <div class="col-sm-10">
      <%= text_field :user, :login_id,:class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
    <%= label_tag :user_password, t('users.password'),:class=>"col-sm-2 control-label"%>
      <div class="col-sm-10">
      <%= password_field :user, :password,:autocomplete =>"off",:class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Sign in", :class=>"btn btn-default" %>
      </div>
    </div>

 <% end %>
    </div>
 </div>
