<div class="row">
  <div class="col-md-6 col-md-offset-2 col-xs-9 col-xs-offset-0">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Sign in as ISPConfig client user</h3>
      </div>
      <div class="panel-body">
        <div class="col-md-12 col-xs-12">
          <%= form_for(:session, url: @form_target,:html => { :id => 'session-login-form', :autocomplete =>"off",:role => "form"}) do |f| %>
              <%= hidden_field_tag "logintype",@logintype %>
              <fieldset>
                <div class="form-group">
                  <%= text_field :user, :login_id,:class => "form-control", :placeholder=>"Login id" %>
                </div>
                <div class="form-group">
                  <%= password_field :user, :password,:autocomplete =>"off",:class => "form-control", :placeholder => "Password" %>
                </div>
                <%= f.submit "Sign in", :class=>"btn btn-lg btn-success btn-block" %>

              </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
