<h2>Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:role => "form", :class => "form-horizontal"}) do |f| %>
<div class="col-sm-6">
  <div class="form-group">
    <%= f.label :login,:class=>"col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :login, autofocus: true,:class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password,:class=>"col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.password_field :password, autocomplete: "off",:class => "form-control" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-4">
      <div class="checkbox">
        <label>
          <%= f.check_box :remember_me %> <%= f.label :remember_me %>
        </label>
      </div>
    </div>
  </div>
  <% end -%>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-4">
      <%= f.submit "Sign in", :class=>"btn btn-default" %>
    </div>
  </div>

  </div>
<% end %>

<%= render "admins/shared/links" %>
