
<%- if devise_mapping.omniauthable? %>
<div class="col-sm-4">
  <div id="authproviders" class="buttonlist">
    <ul>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <li><%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), :class => "linkbutton" %></li>
    <% end -%>
    </ul>
  </div>
</div>
<% end -%>
