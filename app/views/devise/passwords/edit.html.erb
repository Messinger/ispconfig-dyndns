<div class="row">
<h2 class="page-header">Change your password</h2>
</div>

<div class="row">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>
        <div class="col-sm-offset-2 col-sm-10">
            <%= devise_error_messages! %>
        </div>

        <div class="form-group">
            <%= f.label :password, "New password", :class => "col-sm-2 control-label" %>
            <div class="col-sm-10">
                <%= f.password_field :password, autofocus: true, autocomplete: "off", :class => "form-control" %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :password_confirmation, "Confirm new password", :class => "col-sm-2 control-label" %>
            <div class="col-sm-10">
                <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit "Change my password",:class => "btn btn-default" %>
            </div>
        </div>
<% end %>
</div>

<%= render "devise/shared/links" %>
