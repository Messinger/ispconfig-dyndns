<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Overview</h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-3 col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-3">
            <i class="fa fa-database fa-5x"></i>
          </div>
          <div class="col-xs-9 text-right">
            <div class="huge"><%= records_list.count %></div>
            <div>DNS records</div>
          </div>
        </div>
      </div>
      <%=
        link_to(
        content_tag(:div,
                    content_tag(:span,"Show",:class=>'pull-left')+
                        content_tag(:span,
                                    content_tag(:i,'',:class=>"fa fa-arrow-circle-right"),
                                    :class => 'pull-right'
                        )+
                        content_tag(:div,nil,:class => 'clearfix'),:class=>"panel-footer"),
        dns_host_records_path
        )
      %>
    </div>
  </div>
</div>
