
<%= form_for @dns_zone_record do |f| %>

<% unless @dns_zone_record.dns_zone.blank? %>
  <%= hidden_field_tag('dns_zone_record[dns_zone]',@dns_zone_record.dns_zone.id) %>
  <% zsel = "" %>
<% else %>
  <% zsel = f.select(:dns_zone, DnsZone.accessible_by(current_ability).collect{|d| ["."+d.name,d.id]}) %>
<% end %>

  <div class="formbox">
    <div class="elementlabelbox">
      <%= f.label(:name,"Hostname:") %>
    </div>
    <div class="elementbox" >
      <%= text_field_tag("dns_zone_record[name]") %>  <%= zsel %>
    </div>
  </div>
  <div class="clear"></div>
  <div class="formbox">
    <div class="elementlabelbox">
      <%= label_tag("dns_zone_record[dns_zone_a_record][address]","IPV4:") %>
    </div>
      <div class="elementbox">
      <%= text_field_tag("dns_zone_record[dns_zone_a_record][address]") %>
    </div>
  </div>
  <div class="clear"></div>
  <div class="formbox">
    <div class="elementlabelbox">
      <%= label_tag("dns_zone_record[dns_zone_aaaa_record][address]","IPV6:") %>
    </div>
    <div class="elementbox">
      <%= text_field_tag("dns_zone_record[dns_zone_aaaa_record][address]") %>
    </div>
  </div>
  

<% end %>
