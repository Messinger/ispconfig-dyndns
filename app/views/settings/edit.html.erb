<div class="row">
<h3 class="page-header"><%= I18n.t('settings.global.title') %></h3>
</div>
<div class="row">
    <div class="col-sm-offset-1">
<%= form_tag(settings_edit_path,:method => :post, :class => "form-horizontal col-sm-8", :role => "form") do%>
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-4">
            <%= submit_tag "Save", :class => "btn btn-default" %>
        </div>
    </div>

    <%= bootstrap_input :mail_from,{:type => :email_field, :label => I18n.t('settings.labels.mail_from')} %>
    <%= bootstrap_input :ispconfig_url,{:type => :text_field, :label=>I18n.t('settings.labels.ispconfig_url')}%>
    <%= bootstrap_input :remote_user,{:type=>:text_field, :label=>I18n.t('settings.labels.remote_user')}%>
    <%= bootstrap_input :remote_password,{:type=>:password_field, :label=>I18n.t('settings.labels.remote_password')}%>
    <%= bootstrap_input :max_records,{:type => :number_field, :label=>I18n.t('settings.labels.max_records'),:min => 1}%>
    <%= bootstrap_input :default_ttl,{:type => :number_field, :label=>I18n.t('settings.labels.default_ttl'),:min => 60}%>

<%end%>
    </div>
</div>
<% content_for :title do%>
  <%= I18n.t('settings.global.head') %>
<% end %>
