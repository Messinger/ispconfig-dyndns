<%= render partial: 'datatables_include' %>

<% content_for :additional_javascripts do %>
<%= javascript_include_tag "pages/isp_dnszones/show" %>
<% end %>

<% content_for :title do %>
    <%= "DNS Records for #{@ispdnszone.origin}" %>
<% end %>

<div>
<h2>Records for <%= "#{@ispdnszone.origin}" %></h2>
</div>
<div>

<table id="dnsrecords" class="display">

<thead>
  <tr>
    <th>Name</th>
    <th>Value</th>
    <th>Type</th>
    <th>Local</th>
  </tr>
</thead>

<tfoot>
  <tr>
    <th>Name</th>
    <th>Value</th>
    <th>Type</th>
    <th>Local</th>
  </tr>
</tfoot>

<tbody>
<% @ispdnszone.records.each do |record| 
    localdns = DnsZoneRecord.find_by_name record.name
    unless localdns.nil?
      
    end
%>
<% if record.type == "A" || record.type == "AAAA" %>
<tr><td><%= record.name %></td><td><%= record.data %></td><td><%= record.type %></td><td><%= localdns %></td></tr>
<% end %>
<%end%>
</tbody>
</table>

</div>
