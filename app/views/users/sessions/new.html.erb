<div class="row">
<h2 class="page-header">Sign in as <%= resource_name.capitalize %></h2>
</div>
<div class="row">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:role => "form", :class => "form-horizontal col-sm-6"}) do |f| %>
        <div class="form-group">
            <%= f.label :email,:class=>"col-sm-2 control-label" %>
            <div class="col-sm-10">
                <%= f.email_field :email, autofocus: true,:class => "form-control" %>
            </div>
        </div>

    <div class="form-group">
        <%= f.label :password, :class=>"col-sm-2 control-label" %>
        <div class="col-sm-10">
            <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
        </div>
    </div>

    <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <div class="checkbox">
          <label>
            <%= f.check_box :remember_me %> <%= f.label :remember_me %>
          </label>
        </div>
      </div>
    </div>
    <% end %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit "Sign in", :class=>"btn btn-default" %>
    </div>
  </div>

<% end %>

<%= render partial: "devise/shared/auth_providers" %>

</div>

<%= render partial: "devise/shared/links" %>
