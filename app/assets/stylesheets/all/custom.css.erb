.clear {
  clear: both;
  display: block;
  overflow: hidden;
  visibility: hidden;
  width: 0;
  height: 0;
}

body
{
    margin-left: 5px;
    margin-right: 5px;
    font-family: Arial, Geneva, 'Franklin Gothic', Helvetica, sans-serif;
}

#logo
{
    margin: 0 0 0 0;
    width: 100%;
    min-height: 30px;
    background: #aaa;
}

#mainarea
{
    position: relative;
    top: 10px;
    min-height: 480px;
    height: 100%;
}

#mainarea #content {
    top: 10px;
    padding: 10px;
    float: left;
    min-width: 600px;
    width: 90%;
    position: relative;
}
